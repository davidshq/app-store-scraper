{
  "extends": [
    "semistandard",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": ["test/**/*.js", "test/**/*.ts"],
      "rules": {
        "@typescript-eslint/ban-ts-comment": "off"
      }
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "prefer-const": "warn"
  }
}

{
  "name": "app-store-scraper",
  "version": "0.18.0",
  "description": "Scrape data from the iTunes app store",
  "main": "dist/index.js",
  "type": "module",
  "types": "index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,json,md,ts}\"",
    "prepare": "npm run build",
    "pre-commit": "lint-staged && npm ci && npm audit --audit-level=moderate && npm test",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist || rm -r -force dist 2>null || true",
    "build": "npm run clean && tsc",
    "build:types": "npm run clean && tsc --declaration --emitDeclarationOnly",
    "prepublishOnly": "npm run lint && npm test",
    "docs": "typedoc --options typedoc.config.json",
    "docs:html": "typedoc --options typedoc.html.json",
    "generate-docs": "node --experimental-vm-modules scripts/generate-docs.js",
    "generate-docs:html": "node --experimental-vm-modules scripts/generate-html-docs.js",
    "validate": "npm run lint && npm run check-types && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/facundoolano/app-store-scraper.git"
  },
  "keywords": [
    "mac",
    "app",
    "store",
    "itunes",
    "scraper"
  ],
  "author": "Facundo Olano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/facundoolano/app-store-scraper/issues"
  },
  "homepage": "https://github.com/facundoolano/app-store-scraper#readme",
  "dependencies": {
    "cheerio": "^1.0.0",
    "debug": "^4.4.0",
    "got": "^14.4.6",
    "limiter": "^3.0.0",
    "memoizee": "^0.4.17",
    "ramda": "^0.30.1",
    "validator": "^13.15.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/memoizee": "^0.4.12",
    "@types/ramda": "^0.30.2",
    "@types/validator": "^13.12.3",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --quiet --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

{
  "name": "app-store-scraper",
  "version": "0.18.0",
  "description": "Scrape data from the iTunes app store",
  "main": "dist/index.js",
  "type": "module",
  "types": "index.d.ts",
  "scripts": {
    "test": "npm run build && cross-env NODE_PATH=./dist node --experimental-vm-modules --experimental-specifier-resolution=node node_modules/mocha/bin/mocha",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,json,md,ts}\"",
    "prepare": "npm run build",
    "pre-commit": "lint-staged && npm ci && npm audit --audit-level=moderate && npm test",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist || rm -r -force dist 2>null || true",
    "build": "npm run clean && tsc",
    "build:types": "npm run clean && tsc --declaration --emitDeclarationOnly",
    "prepublishOnly": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/facundoolano/app-store-scraper.git"
  },
  "keywords": [
    "mac",
    "app",
    "store",
    "itunes",
    "scraper"
  ],
  "author": "Facundo Olano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/facundoolano/app-store-scraper/issues"
  },
  "homepage": "https://github.com/facundoolano/app-store-scraper#readme",
  "dependencies": {
    "bottleneck": "^2.19.5",
    "cheerio": "^1.0.0",
    "debug": "^4.4.0",
    "got": "^14.4.6",
    "memoizee": "^0.4.17",
    "ramda": "^0.29.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/debug": "^4.1.12",
    "@types/memoizee": "^0.4.11",
    "@types/mocha": "^10.0.10",
    "@types/ramda": "^0.29.11",
    "@types/sinon": "^17.0.4",
    "@types/validator": "^13.12.3",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "^8.0.0",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.2.4",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "mocha": "^10.8.2",
    "mock-require": "^3.0.3",
    "prettier": "^3.5.3",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "validator": "^13.15.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "eslint --fix",
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
